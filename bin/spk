#!/usr/bin/env node

const program = require('commander')
const version = require('../package.json').version

program
  .version(version)
  .usage('<command> [options...]')
  .description('—— SPK template installer and task runner ——')
  .command('use [template] [option]', 'Get shit done with a project template').alias('u')
  .command('run [task] [options...]', 'Make shit better by running a task').alias('r')
  .command('token [options...]', 'Set or delete an auth token')
  .parse(process.argv)
