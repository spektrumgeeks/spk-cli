#!/usr/bin/env node

const ascii = require('../lib/ascii')
const program = require('commander')
const version = require('../package.json').version
const desc = require('../lib/config').default.description

program
  .version(version)
  .description(desc + ascii)
  .command('use [template]', 'Get shit done with a project template').alias('u')
  .command('run [tool]', 'Run a processing tool on local assets').alias('r')
  .parse(process.argv)
